<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}"/></h1>
    </header>
    <div class="main">
        {{!-- Navigation tabs --}}
        <nav class="class-tabs font-bold" data-group="primary-tabs" >
            <a class="item" data-tab="about">{{localize "olddragon2e.navigation.class.about_tab"}}</a>
            <a class="item" data-tab="features">{{localize "olddragon2e.navigation.class.features_tab"}}</a>
            <a class="item" data-tab="class-abilities">{{localize "olddragon2e.navigation.class.abilities_tab"}}</a>
        </nav>
        {{!-- Navigation section --}}
        <section class="section">
            {{!-- Sobre --}}
            <div class="tab" data-group="primary-tabs" data-tab="about">
                {{> systems/olddragon2e/templates/partials/tabs/class-tab-about.hbs}}
            </div>
            {{!-- Características --}}
            <div class="tab" data-group="primary-tabs" data-tab="features">
                {{> systems/olddragon2e/templates/partials/tabs/class-tab-features.hbs}}
            </div>
            {{!-- Habilidades de Raça --}}
            <div class="tab" data-group="primary-tabs" data-tab="class-abilities">
                {{> systems/olddragon2e/templates/partials/tabs/class-tab-abilities.hbs}}
            </div>
        </section>
    </div>
</form>