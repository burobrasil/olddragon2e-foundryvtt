                <a class="item-create" data-type="armor" title="{{localize 'olddragon2e.create_armor'}}"><i class="fa-solid fa-plus"></i> {{localize "olddragon2e.create"}}</a>
            </div>
        </div>
        <ol class="item-list">
            {{#each armor as |armor id|}}
            <li class="item" data-item-id="{{armor._id}}">
                {{> "systems/olddragon2e/templates/partials/cards/armor-card.hbs" armor}}
            </li>
            {{/each}}
        </ol>
    </div>

    {{!-- Escudos --}}
    <div class="shield">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.shield"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
            <div class="weight">{{localize "olddragon2e.full_weight"}}</div>
            <div class="cost">{{localize "olddragon2e.full_cost"}}</div>
            <div class="description">{{localize "olddragon2e.description"}}</div>
            <div class="create">
                <a class="item-create" data-type="shield" title="{{localize 'olddragon2e.create_shield'}}"><i class="fa-solid fa-plus"></i> {{localize "olddragon2e.create"}}</a>
            </div>
        </div>
        <ol class="item-list">
            {{#each shield as |shield id|}}
            <li class="item" data-item-id="{{shield._id}}">
                {{> "systems/olddragon2e/templates/partials/cards/shield-card.hbs" shield}}
            </li>
            {{/each}}
        </ol>
    </div>

    {{!-- Itens Gerais --}}
    <div class="misc">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.misc"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
            <div class="weight">{{localize "olddragon2e.full_weight"}}</div>
            <div class="cost">{{localize "olddragon2e.full_cost"}}</div>
            <div class="description">{{localize "olddragon2e.description"}}</div>
            <div class="create">
                <a class="item-create" data-type="misc" title="{{localize 'olddragon2e.create_item'}}"><i class="fa-solid fa-plus"></i> {{localize "olddragon2e.create"}}</a>
            </div>
        </div>
        <ol class="item-list">
            {{#each misc as |misc id|}}
            <li class="item" data-item-id="{{misc._id}}">
