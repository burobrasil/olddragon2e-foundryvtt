    <div class="vehicle">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.vehicle"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
            <div class="weight">{{localize "olddragon2e.full_weight"}}</div>
            <div class="cost">{{localize "olddragon2e.full_cost"}}</div>
            <div class="description">{{localize "olddragon2e.description"}}</div>
            <div class="create">
                <a class="item-create" data-type="vehicle" title="{{localize 'olddragon2e.create_vehicle'}}"><i class="fa-solid fa-plus"></i> {{localize "olddragon2e.create"}}</a>
