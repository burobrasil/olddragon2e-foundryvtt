        </div>
        <ol class="item-list">
            {{#each vehicle as |vehicle id|}}
            <li class="item" data-item-id="{{vehicle._id}}">
                {{> "systems/olddragon2e/templates/partials/cards/vehicle-card.hbs" vehicle}}
            </li>
            {{/each}}
        </ol>
    </div>

    {{!-- Carga --}}
    <div class="load border">
        <label class="font-bold">{{localize "olddragon2e.load"}}</label>
        <div class="load-values">
            {{!-- Carga | Atual --}}
            <div class="current-load">
                <input id="current-load" name="system.load.current" type="text" value="{{system.load.current}}" data-dtype="Number" disabled="true">
                <label class="text-xs font-bold">{{localize "olddragon2e.load_current"}}</label>
            </div>
            {{!-- Carga | MÃ¡xima --}}
            <div class="max-load">
                <input name="system.load.max" type="text" value="{{system.load.max}}" data-dtype="Number">
                <label class="text-xs font-bold">{{localize "olddragon2e.load_max"}}</label>
            </div>
        </div>
    </div>
</div>
