    {{!-- Recipientes & Vasilhames --}}
    <div class="container">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.container"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
            <div class="weight">{{localize "olddragon2e.full_weight"}}</div>
