<div class="character-tab-equipment">
    {{!-- Armas --}}
    <div class="weapon">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.weapon"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
            <div class="weight">{{localize "olddragon2e.full_weight"}}</div>
            <div class="cost">{{localize "olddragon2e.full_cost"}}</div>
            <div class="description">{{localize "olddragon2e.description"}}</div>
            <div class="create">
                <a class="item-create" data-type="weapon" title="{{localize 'olddragon2e.create_weapon'}}"><i class="fa-solid fa-plus"></i> {{localize "olddragon2e.create"}}</a>
            </div>
        </div>
        <ol class="item-list">
            {{#each weapon as |weapon id|}}
            <li class="item" data-item-id="{{weapon._id}}">
                {{> "systems/olddragon2e/templates/partials/cards/weapon-card.hbs" weapon}}
            </li>
            {{/each}}
        </ol>
    </div>

    {{!-- Armaduras --}}
    <div class="armor">
        <div class="list">
            <div class="type">{{localize "olddragon2e.item_types.armor"}}</div>
            <div class="quantity">{{localize "olddragon2e.quantity_short"}}</div>
